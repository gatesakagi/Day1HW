@model IEnumerable<Day1HW.Models.AccountBook>
@{
    ViewBag.Title = "ShowAccountContent";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{ var i = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(i).</td>
                    <td>@Html.Raw(Convert.ToBoolean(item.Categoryyy) ? "收入" : "支出")</td>
                    <td>@(item.Dateee.ToString("yyyy-MM-dd"))</td>
                    <td>@(item.Amounttt.ToString("N0"))</td>
                </tr>
                ++i;
            }
        </table>
    </div>
</div>
