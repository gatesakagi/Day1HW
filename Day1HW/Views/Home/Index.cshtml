@model Day1HW.Models.ViewModels.AccountContentViewModel
@{
    ViewBag.Title = "我的記帳本";
}
<br /><br />
<div class="well">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.accountCategory, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.accountCategory, new SelectList(
                 new List<Object>{
                           new { value = "1" , text = "收入"  },
                           new { value = "0" , text = "支出" }
                 }, "value", "text"), "請選擇...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.accountCategory, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.accountFee, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.accountFee, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.accountFee, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.accountDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.accountDate, new { @class = "form-control datetimepicker", placeholder = "點選日期...", })
                    @Html.ValidationMessageFor(model => model.accountDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.accountNote, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.accountNote, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.accountNote, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
        <br /><br />
    }
</div>
<br />
<div>
    @Html.Action("ShowAccountContent")
</div>